  function gp() {
    git commit $1 -m $2 --author="$3 <${4}>"
  }

  function tag() {
    git tag -a "$1" -m "$1"

    echo "Now your project is on version '`git describe`'"
  }

  function amazon() {
    ssh -i "/Users/${USER}/.ssh/${1}.pem" "ubuntu@${1}.${2}"
  }

